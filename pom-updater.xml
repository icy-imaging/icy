<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.bioimageanalysis.icy</groupId>
    <artifactId>icy-updater</artifactId>
    <version>2.1.0-SNAPSHOT</version>

    <packaging>jar</packaging>

    <name>Icy-Updater</name>
    <description>Updater / Launcher tool for Icy software</description>
    <url>http://icy.bioimageanalysis.org/</url>
    <inceptionYear>2011</inceptionYear>
    <organization>
        <name>Institut Pasteur</name>
        <url>https://www.pasteur.fr/</url>
    </organization>
    <licenses>
        <license>
            <name>GNU GPLv3</name>
            <url>https://www.gnu.org/licenses/gpl-3.0.en.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>sdallongeville</id>
            <name>St√©phane Dallongeville</name>
            <url>http://icy.bioimageanalysis.org/author/stef/</url>
            <roles>
                <role>founder</role>
                <role>lead</role>
                <role>developer</role>
                <role>debugger</role>
                <role>reviewer</role>
                <role>support</role>
                <role>maintainer</role>
            </roles>
        </developer>
        <developer>
            <id>atournay</id>
            <name>Amandine Tournay</name>
            <roles>
                <role>developer</role>
                <role>maintainer</role>
            </roles>
        </developer>
    </developers>
    <!--<contributors></contributors> -->

    <mailingLists>
        <mailingList>
            <name>Icy</name>
            <post>icy-all@pasteur.fr</post>
        </mailingList>
    </mailingLists>

    <issueManagement>
        <system>Gitlab</system>
        <url>https://gitlab.pasteur.fr/bia/icy-updater/issues</url>
    </issueManagement>

    <properties>
        <project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
        <jdk.version>1.6</jdk.version>
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>

        <outputDirectory>${project.build.directory}</outputDirectory>

        <stripVersion>true</stripVersion>
        <overWriteTrue>true</overWriteTrue>
        <overWriteFalse>true</overWriteFalse>

        <overWriteReleases>true</overWriteReleases>
        <overWriteIfNewer>true</overWriteIfNewer>
        <overWriteSnapshots>false</overWriteSnapshots>
    </properties>

    <build>
        <defaultGoal>install</defaultGoal>
        <directory>build-updater</directory>
        <finalName>updater-${project.version}</finalName>
        <!-- <sourceDirectory>src/main/java</sourceDirectory> -->
        <!-- <resources> -->
        <!-- <resource> -->
        <!-- <directory>src/main/resources</directory> -->
        <!-- </resource> -->
        <!-- </resources> -->

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                    <resources>
                        <resource>
                            <directory>resources</directory>
                            <includes>
                            </includes>
                        </resource>
                    </resources>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <includes>
                        <include>icy/main/Icy.java</include>
                        <include>icy/gui/main/MainInterface.java</include>
                        <include>icy/preferences/WorkspaceOnlinePreferences.java</include>
                        <include>icy/preferences/PluginPreferences.java</include>
                        <include>icy/preferences/XMLPreferences.java</include>
                        <include>icy/preferences/PluginOnlinePreferences.java</include>
                        <include>icy/preferences/ChatPreferences.java</include>
                        <include>icy/preferences/CanvasPreferences.java</include>
                        <include>icy/file/FileUtil.java</include>
                        <include>icy/util/ZipUtil.java</include>
                        <include>icy/plugin/PluginDescriptor.java</include>
                        <include>icy/type/collection/array/DynamicArray.java</include>
                        <include>icy/preferences/GeneralPreferences.java</include>
                        <include>icy/system/thread/InstanceProcessor.java</include>
                        <include>icy/preferences/PluginsPreferences.java</include>
                        <include>icy/preferences/WorkspacePreferences.java</include>
                        <include>icy/update/ElementDescriptor.java</include>
                        <include>icy/network/NetworkUtil.java</include>
                        <include>icy/preferences/WorkspaceLocalPreferences.java</include>
                        <include>icy/preferences/IcyPreferences.java</include>
                        <include>icy/system/thread/ThreadUtil.java</include>
                        <include>icy/util/XMLUtil.java</include>
                        <include>icy/util/StringUtil.java</include>
                        <include>icy/math/MathUtil.java</include>
                        <include>icy/preferences/RepositoryPreferences.java</include>
                        <include>icy/system/IcyExceptionHandler.java</include>
                        <include>icy/system/thread/Processor.java</include>
                        <include>icy/preferences/NetworkPreferences.java</include>
                        <include>icy/preferences/ApplicationPreferences.java</include>
                        <include>icy/network/URLUtil.java</include>
                        <include>icy/common/Version.java</include>
                        <include>icy/system/SystemUtil.java</include>
                        <include>icy/preferences/PluginLocalPreferences.java</include>
                        <include>icy/file/xml/XMLPersistent.java</include>
                        <include>icy/update/Updater.java</include>
                        <include>icy/updater/Main.java</include>
                        <include>icy/updater/UpdateFrame.java</include>
                    </includes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.1.2</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>icy.updater.Main</mainClass>
                        </manifest>
                        <addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>copy-package</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <version>${project.version}</version>
                                    <type>${project.packaging}</type>
                                    <outputDirectory>build/icy</outputDirectory>
                                    <destFileName>updater.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.bioimageanalysis.icy</groupId>
            <artifactId>icy-kernel</artifactId>
            <version>2.1.0-SNAPSHOT</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.bioimageanalysis.icy</groupId>
            <artifactId>icy-bioformats</artifactId>
            <version>6.3.1</version>
        </dependency>

        <dependency>
            <groupId>org.bioimageanalysis.icy</groupId>
            <artifactId>icy-insubstantial</artifactId>
            <version>7.3.7</version>
        </dependency>

        <dependency>
            <groupId>org.bioimageanalysis.icy</groupId>
            <artifactId>icy-vtk</artifactId>
            <version>6.3.0.1</version>
        </dependency>

        <dependency>
            <groupId>javax.media</groupId>
            <artifactId>jai-core</artifactId>
            <version>1.1.3</version>
        </dependency>

        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>ij</artifactId>
            <version>1.52q</version>
        </dependency>

    </dependencies>

    <repositories>
        <repository>
            <id>jai-repo</id>
            <url>http://maven.geomajas.org/</url>
        </repository>
        <repository>
            <id>icy-prod</id>
            <url>https://icy-nexus.pasteur.fr/repository/icy-core/</url>
        </repository>
        <repository>
            <id>icy-dev</id>
            <url>https://icy-nexus-dev.pasteur.cloud/repository/icy-core/</url>
        </repository>
    </repositories>

    <distributionManagement>
        <snapshotRepository>
            <id>icy-dev</id>
            <url>https://icy-nexus-dev.pasteur.cloud/repository/icy-core/</url>
        </snapshotRepository>
        <repository>
            <id>icy-prod</id>
            <url>https://icy-nexus.pasteur.fr/repository/icy-core/</url>
        </repository>
    </distributionManagement>
</project>
