<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>pom-icy</artifactId>
        <groupId>org.bioimageanalysis.icy</groupId>
        <version>3.0.0</version>
    </parent>

    <artifactId>icy-updater</artifactId>
    <version>3.0.0</version>

    <name>Icy-Updater</name>
    <description>Updater / Launcher tool for Icy software</description>

    <properties>
        <maven.javadoc.skip>true</maven.javadoc.skip>
    </properties>

    <build>
        <defaultGoal>clean install</defaultGoal>
        <directory>build-updater</directory>
        <finalName>updater-${project.version}</finalName>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                    <resources>
                        <resource>
                            <directory>resources</directory>
                            <includes>
                            </includes>
                        </resource>
                    </resources>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>icy/updater/*.java</include>

                        <include>icy/common/Version.java</include>
                        <include>icy/file/FileUtil.java</include>
                        <include>icy/file/xml/XMLPersistent.java</include>
                        <include>icy/gui/main/IcyDesktopPane.java</include>
                        <include>icy/gui/main/MainInterface.java</include>
                        <include>icy/gui/main/MainInterfaceBatch.java</include>
                        <include>icy/main/Icy.java</include>
                        <include>icy/math/MathUtil.java</include>
                        <include>icy/network/NetworkUtil.java</include>
                        <include>icy/network/URLUtil.java</include>
                        <include>icy/plugin/PluginDescriptor.java</include>
                        <include>icy/preferences/ApplicationPreferences.java</include>
                        <include>icy/preferences/CanvasPreferences.java</include>
                        <include>icy/preferences/ChatPreferences.java</include>
                        <include>icy/preferences/GeneralPreferences.java</include>
                        <include>icy/preferences/IcyPreferences.java</include>
                        <include>icy/preferences/MagicWandPreferences.java</include>
                        <include>icy/preferences/PluginPreferences.java</include>
                        <include>icy/preferences/PluginOnlinePreferences.java</include>
                        <include>icy/preferences/PluginsPreferences.java</include>
                        <include>icy/preferences/PluginLocalPreferences.java</include>
                        <include>icy/preferences/NetworkPreferences.java</include>
                        <include>icy/preferences/RepositoryPreferences.java</include>
                        <include>icy/preferences/WorkspaceLocalPreferences.java</include>
                        <include>icy/preferences/WorkspaceOnlinePreferences.java</include>
                        <include>icy/preferences/WorkspacePreferences.java</include>
                        <include>icy/preferences/XMLPreferences.java</include>
                        <include>icy/swimmingPool/SwimmingPool.java</include>
                        <include>icy/system/IcyExceptionHandler.java</include>
                        <include>icy/system/SystemUtil.java</include>
                        <include>icy/system/logging/IcyLogger.java</include>
                        <include>icy/system/thread/ThreadUtil.java</include>
                        <include>icy/system/thread/Processor.java</include>
                        <include>icy/system/thread/InstanceProcessor.java</include>
                        <include>icy/type/collection/array/DynamicArray.java</include>
                        <include>icy/update/ElementDescriptor.java</include>
                        <include>icy/update/Updater.java</include>
                        <include>icy/util/DateUtil.java</include>
                        <include>icy/util/XMLUtil.java</include>
                        <include>icy/util/StringUtil.java</include>
                        <include>icy/util/ZipUtil.java</include>
                    </includes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <classpathLayoutType>custom</classpathLayoutType>
                            <!--suppress UnresolvedMavenProperty -->
                            <customClasspathLayout>$${artifact.artifactId}.$${artifact.extension}</customClasspathLayout>
                            <mainClass>org.bioimageanalysis.updater.Main</mainClass>
                        </manifest>
                        <addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>

                    <execution>
                        <id>copy-package</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <version>${project.version}</version>
                                    <type>${project.packaging}</type>
                                    <outputDirectory>build/icy</outputDirectory>
                                    <destFileName>updater.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <configuration>
                    <skipSource>true</skipSource>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.bioimageanalysis.icy</groupId>
            <artifactId>icy-kernel</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>annotations</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.formdev</groupId>
            <artifactId>flatlaf</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>com.formdev</groupId>
            <artifactId>flatlaf-intellij-themes</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.bioimageanalysis.icy</groupId>
            <artifactId>icy-poi</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.fusesource.jansi</groupId>
            <artifactId>jansi</artifactId>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!-- We need to override jaxb-runtime version otherwise EhCache will throw an error while resolving dependencies -->
            <dependency>
                <groupId>org.glassfish.jaxb</groupId>
                <artifactId>jaxb-runtime</artifactId>
                <version>${library.jaxb-runtime.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>icy</id>
            <name>Icy's Nexus</name>
            <url>https://icy-nexus.pasteur.fr/repository/Icy/</url>
        </repository>
    </repositories>
</project>
